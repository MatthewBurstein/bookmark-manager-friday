<form action="/add_link" method="post">
  <input type="text" name="new_link" size="30" value="http://www.what44ever.com">
  <input type="text" size="15" name="title" value="what4ever">
  <input type="submit" value="Save link">
</form>

<%= flash[:invalid_uri] %>

<ul>
  <% @links.each do |link| %>
  <li>
    <a href="<%= link.url %>">
      <%= link.title %>
    </a>
    <form action=/delete method="post">
      <button class="delete" type="submit" name="delete" value="<%= link.id %>">
        Delete
      </button>
      <a id=<%= link.id %> href="/update?id=<%= link.id %>">Update</a> 
    </form>
  </li>
  <% end %>
</ul>
